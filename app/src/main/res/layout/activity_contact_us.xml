<?xml version="1.0" encoding="utf-8"?>

<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:fitsSystemWindows="true"
    tools:context=".Contact.ContactActivity" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/back6">

                <include
                    layout="@layout/toolbar_layout"/>

                <EditText
                    android:id="@+id/contact_date"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="30dp"
                    android:hint="@string/date"
                    android:importantForAutofill="no"
                    android:inputType="date"
                    android:textColor="@color/colorPrimary"
                    android:textColorHint="@color/colorPrimary"/>

                <EditText
                    android:id="@+id/contact_fname"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="30dp"
                    android:hint="@string/fname"
                    android:importantForAutofill="no"
                    android:inputType="text"
                    android:textColor="@color/colorPrimary"
                    android:textColorHint="@color/colorPrimary"/>

                <EditText
                    android:id="@+id/contact_lname"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="40dp"
                    android:hint="@string/lname"
                    android:importantForAutofill="no"
                    android:inputType="text"
                    android:textColor="@color/colorPrimary"
                    android:textColorHint="@color/colorPrimary"/>


                <EditText
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:inputType="textEmailAddress"
                    android:hint="@string/email"
                    android:layout_marginTop="30dp"
                    android:id="@+id/contact_email"
                    android:importantForAutofill="no"
                    android:textColor="@color/colorPrimary"
                    android:textColorHint="@color/colorPrimary"/>

                <EditText
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:inputType="textEmailAddress"
                    android:hint="@string/remail"
                    android:layout_marginTop="30dp"
                    android:id="@+id/conatct_remail"
                    android:importantForAutofill="no"
                    android:textColor="@color/colorPrimary"
                    android:textColorHint="@color/colorPrimary"/>

                <EditText
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:inputType="phone"
                    android:hint="@string/phone"
                    android:layout_marginTop="40dp"
                    android:id="@+id/contact_phone"
                    android:importantForAutofill="no"
                    android:textColor="@color/colorPrimary"
                    android:textColorHint="@color/colorPrimary"/>

                <EditText
                    android:layout_width="300dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center"
                    android:inputType="text"
                    android:hint="@string/message"
                    android:layout_marginTop="30dp"
                    android:id="@+id/contact_message"
                    android:importantForAutofill="no"
                    android:textColor="@color/colorPrimary"
                    android:textColorHint="@color/colorPrimary"/>

                <Button
                    android:id="@+id/contact_send"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/button2"
                    android:onClick="send"
                    android:text="@string/send" />

            </LinearLayout>
    </ScrollView>

    <com.google.android.material.navigation.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/navigation_view"
        android:layout_gravity="start"
        app:menu="@menu/drawer_menu"
        app:itemTextColor="@color/pureBlack"
        app:itemIconTint="@color/colorAccent"
        app:headerLayout="@layout/navigation_header"/>

</androidx.drawerlayout.widget.DrawerLayout>