<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
     android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/adminviewback">



        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="353dp"
            android:layout_margin="10dp"
            app:cardBackgroundColor="@color/colorWhite"
            app:cardCornerRadius="10dp">

            <TextView
                android:id="@+id/adTextType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="10dp"
                android:text="@string/category_name"
                android:textColor="@android:color/black"
                android:fontFamily="@font/eraserdust"
                android:textSize="28sp" />

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="70dp"
                android:columnCount="1"
                android:rowCount="4">

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="2"
                    android:rowCount="1">

                    <ImageView
                        android:id="@+id/adImgFood"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="14dp"
                        android:scaleType="centerCrop"
                        app:srcCompat="@mipmap/ic_launcher"
                        android:contentDescription="@string/item_image" />

                    <GridLayout
                        android:layout_width="197dp"
                        android:layout_height="match_parent"
                        android:columnCount="1"
                        android:rowCount="2">

                        <TextView
                            android:id="@+id/adTxtName"
                            android:layout_width="182dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="2dp"
                            android:layout_marginTop="5dp"
                            android:gravity="center"
                            android:text="@string/product_name"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/adTxtDesc"
                            android:layout_width="178dp"
                            android:layout_height="150dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="2dp"
                            android:fontFamily="@font/vtkschalk"
                            android:gravity="start|top"
                            android:inputType="textMultiLine"
                            android:paddingStart="0dp"
                            android:paddingEnd="10dp"
                            android:text="@string/product_desc"
                            android:textColor="@color/pureBlack"
                            android:textSize="16sp" />

                    </GridLayout>

                </GridLayout>


            </GridLayout>

            <TextView
                android:id="@+id/adTxtPrice"
                android:layout_width="365dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="1dp"
                android:layout_marginTop="270dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text=""
                android:textSize="14sp" />

            <Button
                android:id="@+id/btnEdit"
                android:layout_width="150dp"
                android:layout_height="37dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="300dp"
                android:background="@drawable/button2"
                android:text="@string/edit" />

            <Button
                android:id="@+id/btnDelete"
                android:layout_width="150dp"
                android:layout_height="37dp"
                android:layout_marginStart="220dp"
                android:layout_marginTop="300dp"
                android:background="@drawable/button2"
                android:text="@string/delete" />


        </androidx.cardview.widget.CardView>

</LinearLayout>