<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.cheesuscrust">

<!--    Access Network Status-->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/app_icon_rounded"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/app_icon_rounded"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar"
        tools:ignore="GoogleAppIndexingWarning"
        android:fullBackupContent="true">

<!--        User Management -->
        <activity android:name="$User.WelcomeScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="$User.UserProfile" />
        <activity android:name="$User.loginScreen" />
        <activity android:name="$User.signupScreen" />

<!--        Product Management-->
        <activity android:name="$Product.AdminEdit"
            android:label="Edit Item">
        </activity>
        <activity android:name="$Product.AddItem"/>
        <activity
            android:name="$Product.AdminFoodList"
            android:label="Food List"
            android:parentActivityName=".Product.AddItem" />

<!--        Inquiry Management-->
        <activity android:name="$Contact.activity_dash"/>
        <activity android:name="$Contact.ContactActivity"/>
        <activity android:name="$Contact.InquiryActivity"/>
    </application>

</manifest>